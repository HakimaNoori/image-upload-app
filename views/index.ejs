<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Image Gallery</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 p-6">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold text-center mb-6">ðŸ“¸ Image Gallery</h1>

      <div class="text-center mb-6">
        <a
          href="/upload"
          class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
          >Upload Image</a
        >
      </div>
      <% if (images.length > 0) { %>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
      >
        <% images.forEach(image => { %>
        <div class="bg-white rounded shadow overflow-hidden">
          <img
            src="/uploads/<%= image.name %>"
            alt=""
            class="w-full h-48 object-cover"
          />
          <div class="p-3 text-center text-sm text-gray-600">
            <p><%= new Date(image.date).toLocaleString() %></p>
            <form
              action="/delete/<%= image.name %>"
              method="POST"
              onsubmit="return confirm('Are you sure?')"
            >
              <button class="text-red-700 hover:bg-red-800 hover:text-white mt-4 px-3 py-1 border rounded-full border-red-950">Delete</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-center text-gray-500">No images uploaded yet.</p>
      <% } %>
    </div>
  </body>
</html>
